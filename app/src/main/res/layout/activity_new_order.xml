<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@drawable/left_gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <RelativeLayout
                android:id="@+id/layoutStep1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/oval_stroke_5dp_green">

                <TextView
                    android:id="@+id/textStep1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="1"
                    android:textColor="@color/green"
                    android:textSize="?android:textAppearanceLarge"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutStep2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/oval_stroke_5dp_gray">

                <TextView
                    android:id="@+id/textStep2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="2"
                    android:textColor="@color/gray_line"
                    android:textSize="?android:textAppearanceLarge"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutStep3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/oval_stroke_5dp_gray">

                <TextView
                    android:id="@+id/textStep3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="3"
                    android:textColor="@color/gray_line"
                    android:textSize="?android:textAppearanceLarge"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutStep4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/oval_stroke_5dp_gray">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="4"
                    android:textColor="@color/gray_line"
                    android:textSize="?android:textAppearanceLarge"/>
            </RelativeLayout>

        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageThumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/svg_icon_customer"/>

        <TextView
            android:id="@+id/textStepDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="This section will required all of customer information fill in."
            android:textColor="@android:color/darker_gray"
            android:textSize="?android:textAppearanceMedium"/>

    </LinearLayout>

</LinearLayout>