<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="bsd.chula.smartgrass">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:name=".SmartGrassApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".mvp.login.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".mvp.main.MainActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".mvp.sale.SaleActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name=".mvp.sale.neworder.NewOrderActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name=".mvp.sale.neworder.NewOrderChooseLocationActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name=".mvp.sale.neworder.NewOrderChooseGrassDialogActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name=".mvp.technician.TechnicianActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name=".mvp.technician.TechnicianDetailsActivity"
            android:screenOrientation="landscape"/>

        <activity android:name=".mvp.checktoreceive.CheckToReceiveActivity"/>

        <activity
            android:name=".mvp.sign.SignActivity"
            android:screenOrientation="landscape"/>

        <activity android:name=".web.WebViewActivity"
                  android:screenOrientation="landscape"></activity>

        <activity android:name=".mvp.ReportActivity"
                  android:screenOrientation="landscape"></activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>

    </application>

</manifest>